{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES6", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@styles/*": ["src/styles/*"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES6",
    "types": ["cypress", "node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "cypress/**/*.ts", "src/resources.js", "src/utils/domUtils.js", "cypress.config.ts"]
}
